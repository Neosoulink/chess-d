{
	"extends": "@chess-d/configs/typescript/base.json",
	"compilerOptions": {
		"useDefineForClassFields": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,

		"allowImportingTsExtensions": true,
		"jsx": "react-jsx",
		"noEmit": true,

		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
